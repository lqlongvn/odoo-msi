<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="supplier_tree_view" model="ir.ui.view">
            <field name="name">Supplier Tree View</field>
            <field name="model">supplier</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="product_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>

        <record id="supplier_form_view" model="ir.ui.view">
            <field name="name">Supplier Form View</field>
            <field name="model">supplier</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="product_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="first_module_supplier_action" model="ir.actions.act_window">
            <field name="name">Supplier</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">supplier</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="first_module_supplier_menu" name="Supplier" parent="first_module.first_module_root_menu"
                  action="first_module.first_module_supplier_action" sequence="4"
                  groups="first_module.group_product_manager"
        />

    </data>
</odoo>
